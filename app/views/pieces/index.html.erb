<h1>Pieces</h1>
<%= link_to 'New Piece', new_piece_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pieces.each do |piece| %>
      <tr>
        <td><%= piece.name %></td>
        <td><%= piece.color %></td>
        <td><%= piece.description %></td>
        <td><%= cl_image_tag(piece.photos[0].key, height: 300, width: 400, crop: :fill) if !piece.photos[0].nil? %></td>
        <td><%= link_to 'Show', piece %></td>
        <td><%= link_to 'Edit', edit_piece_path(piece) %></td>
        <td><%#= link_to 'Destroy', piece, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

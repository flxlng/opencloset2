<p>
  <strong>Name:</strong>
  <%= @piece.name %>
</p>

<p>
  <strong>Color:</strong>
  <%= @piece.color %>
</p>

<p>
  <strong>Description:</strong>
  <%= @piece.description %>
  <%= button_to 'Create Description', create_description_piece_path(@piece), method: :post, data: { confirm: 'Are you sure you want to create a description for this piece?' } %>
</p>

<% if @piece.photos.attached? %>
  <% @piece.photos.each do |photo| %>
    <%= image_tag url_for(photo), height: 300, width: 400 %>
  <% end %>
<% end %>
<%= link_to 'Edit', edit_piece_path(@piece) %> |
<%= form_with model: @piece, method: :delete, local: true do |form| %>
  <%= form.submit 'Destroy', data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', pieces_path %>
